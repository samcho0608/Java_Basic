package exception;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int[] arr = new int[5];
		
		try{
			System.out.print("정수 입력: ");
			arr[1] = sc.nextInt();
		}
		catch(InputMismatchException e) {
			
		}
		
		sc.close();
	}

}
